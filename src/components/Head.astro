---
interface Props {
  title?: string;
}

const { title = "Links" } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>{title} | Toastify</title>
  <meta property="og:title" content={`${title} | Toastify`} />
  <meta name="description" content="The official website for Toastify." />
  <meta
    property="og:description"
    content="The official website for Toastify."
  />
  <meta name="theme-color" content="#ffdb00" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:creator" content="@ToastifyDev" />
  <meta property="og:url" content="https://toastify.tk" />
  <meta property="og:type" content="website" />
  <meta name="msapplication-TileColor" content="#ffdb00" />
  <link
    rel="shortcut icon"
    href="https://toastify.tk/favicon.ico"
    type="image/x-icon"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="https://toastify.tk/favicon-16x16.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="https://toastify.tk/favicon-32x32.png"
  />
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="https://toastify.tk/apple-touch-icon.png"
  />
  <link
    rel="mask-icon"
    color="#ffdb00"
    href="https://toastify.tk/safari-pinned-tab.svg"
  />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="robots" content="index,follow" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap");

    body {
      font-family: "Inter", sans-serif;
      @apply w-screen bg-gradient-to-b from-black to-[#a67f07] text-white;
    }
  </style>
</head>
